  "POST_/api/v1/ucapan": {
    "description": "Submit wedding attendance confirmation and wishes",
    "method": "POST",
    "headers": {
      "Content-Type": "application/json",
      "Accept": "application/json"
    },
    "request_body": {
      "nama": "Ahmad Rizki",
      "kehadiran": "hadir",
      "pesan": "Selamat menempuh hidup baru! Semoga menjadi keluarga yang sakinah, mawaddah, warahmah."
    },
    "request_options": {
      "kehadiran_values": ["hadir", "tidak_hadir", "mungkin"],
      "validation_rules": {
        "nama": "required|string|max:255",
        "kehadiran": "required|in:hadir,tidak_hadir,mungkin",
        "pesan": "required|string|max:1000"
      }
    },
    "success_response": {
      "status_code": 201,
      "data": {
        "message": "Ucapan berhasil disimpan!",
